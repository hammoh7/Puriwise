generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  uid              String     @unique
  email            String
  age              Int?
  healthConditions String[]   @default([])   
  activityLevel    String?    
  savedCities      String[]   @default([])  
  lastAQIReport    AQIReport?
  profileComplete  Boolean    @default(false)
  currentLocation  String?   
  currentLat       Float?     
  currentLon       Float?     
  healthReports    HealthReport[]
  savedRoutes      SavedRoute[] 

  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

type AQIReport {
  location String 
  aqi      Int    
  severity String 
}

model HealthReport {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  reportText  String    
  createdAt   DateTime  @default(now())
  user        UserProfile @relation(fields: [userId], references: [id])
}

model StreetSegment {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  geometry  Json      
  embedding Float[]   

  createdAt DateTime  @default(now())
}

model SavedRoute {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  userId    String      @db.ObjectId
  name      String?     
  start     Json       
  startName String?    
  end       Json        
  endName   String?    
  routeType String     
  polyline  String      
  exposure  Float      
  distance  Float       
  time      Float   
  mode      String?    
  createdAt DateTime    @default(now())
  user      UserProfile @relation(fields: [userId], references: [id])
}

model Report {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl      String     
  location      Json       
  category      String     
  visionLabels  String[]   
  embedding     Float[]   
  timestamp     DateTime   @default(now())
}